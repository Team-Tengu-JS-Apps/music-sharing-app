<a id="add-song" type="button" class="btn btn-warning btn-block" href="#/songs/add">Add</a>

<ul id="all-songs" class="list-group">
    {{#each all}}
        <li class="list-group-item">
            <h4>{{title}}</h4><br>
            {{#if description}}
                <small>{{description}}</small>
            {{else}}
                <small><em>No description</em></small>
            {{/if}}
            <span class="glyphicon glyphicon-star-empty pull-right" aria-hidden="true">{{stars}}</span>
            <span class="glyphicon glyphicon-user pull-right" aria-hidden="true"></span>
        </li>
        <li class="list-group-item btn-default" data-url="{{url}}" data-id="{{id}}">Watch</li>
    {{/each}}
</ul>