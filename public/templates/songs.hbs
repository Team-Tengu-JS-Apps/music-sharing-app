<div>
    <ul id="all-songs" class="list-group">
        {{#each all}}
        <div id="song">
            <li class="list-group-item">
                <h4>{{title}}</h4><br> {{#if description}}
                <small>{{description}}</small><br> {{else}}
                <small><em>No description</em></small><br> {{/if}}
                <span id="watch-song" class="glyphicon glyphicon-play" data-url="{{url}}" data-id="{{id}}"></span>
                <a id="comment-song" class="glyphicon glyphicon-comment" href="#/songs/{{id}}/comment"></a>
                <a id="share-song" class="glyphicon glyphicon-share-alt" href="https://www.facebook.com/sharer/sharer.php?u={{url}}" target="_blank"></a>
                <span class="glyphicon glyphicon-star-empty pull-right" aria-hidden="true">{{stars}}</span>
            </li>
        </div>
        {{/each}}
    </ul>
</div>